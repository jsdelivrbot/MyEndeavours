<definitions
     name="PollFile2"
     targetNamespace="http://xmlns.oracle.com/pcbpel/adapter/file/PollFile2/"
     xmlns="http://schemas.xmlsoap.org/wsdl/"
     xmlns:tns="http://xmlns.oracle.com/pcbpel/adapter/file/PollFile2/"
     xmlns:plt="http://schemas.xmlsoap.org/ws/2003/05/partner-link/"
     xmlns:jca="http://xmlns.oracle.com/pcbpel/wsdl/jca/"
     xmlns:opaque="http://xmlns.oracle.com/pcbpel/adapter/opaque/"
     xmlns:pc="http://xmlns.oracle.com/pcbpel/"
     xmlns:hdr="http://xmlns.oracle.com/pcbpel/adapter/file/"
    >
    <import namespace="http://xmlns.oracle.com/pcbpel/adapter/file/" location="fileAdapterInboundHeader.wsdl"/>
    <types>
    <schema targetNamespace="http://xmlns.oracle.com/pcbpel/adapter/opaque/"
            xmlns="http://www.w3.org/2001/XMLSchema" >
      <element name="opaqueElement" type="base64Binary" />
    </schema>
    </types>
    <message name="Read_msg">
        <part name="opaque" element="opaque:opaqueElement"/>
    </message>
    <portType name="Read_ptt">
        <operation name="Read">
            <input message="tns:Read_msg"/>
        </operation>
    </portType>
    <binding name="Read_binding" type="tns:Read_ptt">
    <pc:inbound_binding  />
        <operation name="Read">
      <jca:operation
          PhysicalDirectory="${InputDIR}"
          ActivationSpec="oracle.tip.adapter.file.inbound.FileActivationSpec"
          DeleteFile="true"
          IncludeFiles="dynamic.*\.txt"
          PollingFrequency="30"
          MinimumAge="0"
          OpaqueSchema="true" >
      </jca:operation>
      <input>
        <jca:header message="hdr:InboundHeader_msg" part="inboundHeader"/>
      </input>
        </operation>
    </binding>
    <service name="PollFile2">
        <port name="Read_pt" binding="tns:Read_binding">
      <jca:address location="eis/FileAdapter" UIincludeWildcard="dynamic*.txt" />
        </port>
    </service>
  <plt:partnerLinkType name="Read_plt" >
    <plt:role name="Read_role" >
      <plt:portType name="tns:Read_ptt" />
    </plt:role>
  </plt:partnerLinkType>
</definitions>
